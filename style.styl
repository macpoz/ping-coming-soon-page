@import url('https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@200;600;700&display=swap');

// Primary
$blue = hsl(223, 87%, 63%)

// Secondary
$pale-blue = hsl(223, 100%, 88%)
$light-red = hsl(354, 100%, 66%)

// Neutral
$gray = hsl(0, 0%, 59%)
$very-dark-blue = hsl(209, 33%, 12%)

$breakpoint = 768px

d-flex = @block {
  display flex
  align-items center
}

*
  margin 0
  padding 0
  font-family: 'Libre Franklin', sans-serif;


body
  {d-flex}
  justify-content center
  height 100vh
  @media (min-width: $breakpoint)
    min-height 100vh
    height auto

.container
  {d-flex}
  justify-content space-around
  flex-direction column
  width 320px
  margin 0 1.5rem
  height 100%
  @media (min-width: $breakpoint)
    width 635px

  header
    {d-flex}
    justify-content center
    flex-direction column
    margin-top 3rem
    width 100%
    @media (min-width: $breakpoint)
      margin-top 5.5rem

    .logo
      margin-bottom 2.5rem
      width 54px
      @media (min-width: $breakpoint)
        width 86px

    h1
      font-weight 200
      font-size 23px
      margin-bottom 1rem
      color $gray
      @media (min-width: $breakpoint)
        font-size 48px

      span
        font-weight 600
        color $very-dark-blue

    p
      font-size 12px
      font-weight 400
      margin-bottom 2rem
      color $very-dark-blue
      @media (min-width: $breakpoint)
        font-size 20px

    form
      display flex
      align-items stretch
      justify-content center
      flex-direction column
      width 280px
      @media (min-width: $breakpoint)
        flex-direction row
        justify-content space-between
        align-items baseline
        width 100%

      div
        display flex
        flex-direction column
        flex 1
        margin-bottom .5rem
        @media (min-width: $breakpoint)
          margin-right 1.5rem
          margin-bottom 0

        span
          color $light-red
          font-size 10px
          text-align center
          font-weight 600
          margin-bottom 1rem
          @media (min-width: $breakpoint)
            text-align left
            margin-left 2.25rem
            font-size 13px
            margin-bottom 0

      input
        border 1px solid $pale-blue
        border-radius 2rem
        padding .8rem 1.5rem
        margin-bottom .2rem
        @media (min-width: $breakpoint)
          padding 1rem 2rem
          flex-basis 100%
          font-size 16px

        &::-webkit-input-placeholder
            color $pale-blue
            font-size 12px
            @media (min-width: $breakpoint)
              font-size 16px

      button
        color white
        background-color $blue
        border none
        border-radius 2rem
        padding .8rem 1.6rem
        font-size 12px
        font-weight 600
        box-shadow 0 5px 10px 0 $pale-blue
        @media (min-width: $breakpoint)
          padding 1rem 3.5rem
          font-size 16px

        &:hover
          background-color rgba($blue,.75)
          cursor pointer


  main
    margin-top 0
    @media (min-width: $breakpoint)
      margin-top 3rem
    img
      width 320px
      @media (min-width: $breakpoint)
        width 100%

  footer
    {d-flex}
    justify-content center
    flex-direction column
    margin-top 3rem
    width 100%

    .socials
      display flex
      justify-content space-around
      margin-bottom 1.5rem

      & > * + *
        margin-left .75rem

      .fab
        color $blue
        border-radius 1rem
        border 1px solid rgba($pale-blue,.5)
        width 30px
        height 30px
        {d-flex}

        &:hover
          color white
          background-color $blue
          cursor pointer

    p
      font-size 10px
      color $gray
      @media (min-width: $breakpoint)
        font-size 14px
        margin-bottom 3rem



.border-red
  border-color $light-red !important